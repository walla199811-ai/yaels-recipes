FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm ci --omit=dev

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Expose port (Railway expects port 8080)
EXPOSE 8080

# Start worker
CMD ["npm", "run", "temporal:worker"]